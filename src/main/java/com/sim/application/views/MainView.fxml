<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<?import com.sim.application.views.components.TechniqueGrid?>

<?import com.sim.application.views.components.TitleBar?>
<BorderPane fx:id="mainPane"
            stylesheets="@styles/styles.css"
            fx:controller="com.sim.application.views.MainView"
            prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <TitleBar title="Obfuscator"/>
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <HBox VBox.vgrow="ALWAYS">
                <BorderPane HBox.hgrow="ALWAYS">
                    <bottom>
                        <HBox BorderPane.alignment="CENTER">
                            <Button fx:id="reset" mnemonicParsing="false" text="Reset to default">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Button>
                            <Pane HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets />
                                </HBox.margin>
                            </Pane>
                            <Button fx:id="preview" maxHeight="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" text="Preview">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Button>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                    </bottom>
                    <padding>
                        <Insets bottom="15.0" left="25.0" right="25.0" />
                    </padding>
                    <center>
                        <ScrollPane hbarPolicy="NEVER" styleClass="scroll-pane,background-white" BorderPane.alignment="CENTER">
                            <AnchorPane>
                                <VBox fx:id="upload" alignment="CENTER" layoutX="28.0" layoutY="48.0" prefHeight="274.0" prefWidth="272.0">
                                    <Label text="Drop files or folder here...">
                                        <textFill>
                                            <Color red="0.625" green="0.625" blue="0.625" />
                                        </textFill>
                                    </Label>
                                </VBox>
                                <Button fx:id="browse" layoutX="327.0" layoutY="48.0" minWidth="70.0" mnemonicParsing="false" text="Browse" />
                                <Button fx:id="clear" layoutX="327.0" layoutY="159.0" minWidth="70.0" mnemonicParsing="false" text="Clear All" />
                                <Button fx:id="exclude" layoutX="327.0" layoutY="102.0" minWidth="70.0" mnemonicParsing="false" text="Exclude" />
                                <TechniqueGrid fx:id="techniques" layoutX="27.0" layoutY="368.0"
                                               prefHeight="158.0" prefWidth="273.0"/>
                            </AnchorPane>
                        </ScrollPane>
                    </center>
                </BorderPane>
                <VBox HBox.hgrow="SOMETIMES">
                    <AnchorPane VBox.vgrow="NEVER">
                        <Label layoutX="14.0" layoutY="8.0" text="Sample">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </AnchorPane>
                    <TextArea fx:id="sample" disable="true" VBox.vgrow="ALWAYS" />
                </VBox>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <Separator prefWidth="200.0" />
            <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
                <Label fx:id="leftStatus" text="Left status" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3" />
                    </font>
                    <textFill>
                        <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
                    </textFill>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="rightStatus" font="$x3" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
                <padding>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                </padding>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>