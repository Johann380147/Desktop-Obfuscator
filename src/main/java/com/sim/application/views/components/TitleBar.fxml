<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.image.ImageView?>

<fx:root type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         styleClass="title-bar"
         minHeight="31.0" maxHeight="31.0" prefHeight="31.0"
         BorderPane.alignment="CENTER">
  
  <left>
    <Label fx:id="title" textFill="#e2e2e2" BorderPane.alignment="CENTER">
      <graphic>
        <ImageView fx:id="icon" fitWidth="22" fitHeight="22">
        </ImageView>
      </graphic>
      <padding>
        <Insets left="5.0"/>
      </padding>
      <font>
        <Font name="System Bold" size="12.0"/>
      </font>
    </Label>
  </left>
  <center>
    <Pane BorderPane.alignment="CENTER"/>
  </center>
  <right>
    <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT"
          BorderPane.alignment="CENTER">
      <Button fx:id="minimise"
              focusTraversable="false"
              minHeight="20.0" maxHeight="20.0" prefHeight="20.0"
              minWidth="20.0" maxWidth="20.0" prefWidth="20.0"
              HBox.hgrow="NEVER"/>
      <Button fx:id="maximise"
              focusTraversable="false"
              minHeight="20.0" maxHeight="20.0" prefHeight="20.0"
              minWidth="20.0" maxWidth="20.0" prefWidth="20.0"
              HBox.hgrow="NEVER">
        <HBox.margin>
          <Insets>
            <left>3</left>
          </Insets>
        </HBox.margin>
      </Button>
      <Button fx:id="close"
              focusTraversable="false"
              minHeight="20.0" maxHeight="20.0" prefHeight="20.0"
              minWidth="20.0" maxWidth="20.0" prefWidth="20.0"
              HBox.hgrow="NEVER">
        <HBox.margin>
          <Insets>
            <left>3</left>
            <right>3</right>
          </Insets>
        </HBox.margin>
      </Button>
    </HBox>
  </right>
  <padding>
    <Insets right="2.0"/>
  </padding>
</fx:root>