<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>


<fx:root type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../styles/styles.css">

  <VBox styleClass="modal-dialog-glass" fx:id="glass_pane" prefWidth="300" prefHeight="200">
    <VBox styleClass="modal-dialog-container" prefWidth="${glass_pane.prefWidth}" prefHeight="${glass_pane.height}" VBox.vgrow="ALWAYS">
      <HBox styleClass="modal-dialog-header">
        <Label fx:id="title" textFill="#e2e2e2"/>
      </HBox>
      <VBox fx:id="content" styleClass="modal-dialog-content" VBox.vgrow="ALWAYS"/>
      <HBox styleClass="modal-dialog-footer">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeDialog" text="Close"/>
      </HBox>
    </VBox>
  </VBox>
</fx:root>
