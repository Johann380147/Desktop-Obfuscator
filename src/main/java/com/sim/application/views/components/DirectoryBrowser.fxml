<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="200.0">
  
  <HBox>
    <Label text="Directory" styleClass="border-label"/>
    <Label fx:id="fileSizeLabel" styleClass="italic-label"/>
  </HBox>
  <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
    <TreeView fx:id="directory"/>
  </ScrollPane>
  <HBox>
    <Button fx:id="browse">
      <graphic>
        <Glyph fontFamily="FontAwesome" icon="FOLDER_OPEN"/>
      </graphic>
    </Button>
    <Region HBox.hgrow="ALWAYS"/>
    <Button fx:id="clear">
      <graphic>
        <Glyph fontFamily="FontAwesome" icon="TRASH"/>
      </graphic>
    </Button>
    <padding>
      <Insets top="5" bottom="25"/>
    </padding>
  </HBox>
</fx:root>
